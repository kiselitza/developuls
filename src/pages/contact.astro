---
import Contactform from "@components/contactform.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Layout from "@layouts/Layout.astro";
import { Icon } from "astro-icon";
---

<Layout title="Contact">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Contact</Fragment>
      <Fragment slot="desc"></Fragment>
    </Sectionhead>

    <div class="grid md:grid-cols-2 gap-10 mx-auto max-w-4xl mt-16">
      <div>
        <h2 class="font-medium text-2xl">Contact <span style="color: #02AB4A">developuls</span></h2>
        <p class="text-lg leading-relaxed mt-3">
          Have something to ask? Want to book a call? We are happy to help.
        </p>
        <p class="text-lg leading-relaxed mt-3">
          We love understanding our clients and their needs, so feel free to reach out and introduce yourselves.
        </p>
        <div class="mt-5">
          <div class="flex items-center mt-2 space-x-2">
            <Icon class="w-4 h-4" name="uil:envelope" />
            <a href="mailto:hello@developuls.com">hello@developuls.com</a>
          </div>
          <div class="flex items-center mt-2 space-x-2">
            <Icon class="w-4 h-4" name="uil:map-marker" />
            <span>Dzemala Bijedica 279c, 71000 Sarajevo</span>
          </div>
        </div>
      </div>
      <div>
        <Contactform />
      </div>
    </div>
  </Container>
</Layout>
